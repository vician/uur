#!/bin/bash

name="purple-facebook"
ext="tar.gz"
version="0.9.5-9ff9acf9fa14"
url="https://github.com/dequis/${name}/releases/download/v${version}/${name}-${version}.${ext}"
depends=(build-essential libglib2.0-dev libjson-glib-dev libpurple-dev)

insidedir="${name}-${version}"

build () {
	./configure
	make
}

package () {
	sudo make install
}

uninstall () {
	sudo make uninstall
}
