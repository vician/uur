#!/bin/bash

name="telegram-purple"
ext="tar.gz"
version="1.3.1"
url="https://github.com/majn/${name}/releases/download/v${version}/telegram-purple_1.3.1.orig.${ext}"
depends=(libgcrypt20-dev libpurple-dev libwebp-dev gettext build-essential)

archivedir="${name}"

build () {
	cd $archivedir
	./configure
	make
}

package () {
	cd $archivedir
	sudo make install
}

